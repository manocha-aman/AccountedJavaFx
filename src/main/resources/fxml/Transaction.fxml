<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@../styles/Styles.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.uptech.accounted.controller.TransactionController">
	<top>
		<fx:include source="MenuBar.fxml" />
	</top>
	<left>
		<VBox prefHeight="571.0" prefWidth="306.0" spacing="10.0" styleClass="background" stylesheets="@../styles/Styles.css" BorderPane.alignment="CENTER">
			<children>
				<Label contentDisplay="CENTER" text="Transaction" textAlignment="CENTER" textFill="WHITE">
					<font>
						<Font size="20.0" />
					</font>
					<VBox.margin>
						<Insets bottom="10.0" left="70.0" top="30.0" />
					</VBox.margin>
				</Label>
				<TextField fx:id="id" editable="false" opacity="0.37" prefHeight="30.0" prefWidth="246.0" promptText="transactionID">
					<VBox.margin>
						<Insets left="25.0" right="25.0" />
					</VBox.margin>
				</TextField>
				<ComboBox fx:id="cbInitiator" prefHeight="30.0" prefWidth="246.0" promptText="Select Initiator">
					<VBox.margin>
						<Insets left="25.0" />
					</VBox.margin>
				</ComboBox>
				<ComboBox fx:id="cbDepartment" prefHeight="30.0" prefWidth="246.0" promptText="Select Department">
					<VBox.margin>
						<Insets left="25.0" />
					</VBox.margin>
				</ComboBox>
				<ComboBox fx:id="cbRecipient" prefHeight="30.0" prefWidth="246.0" promptText="Select Recipient">
					<VBox.margin>
						<Insets left="25.0" />
					</VBox.margin>
				</ComboBox>
				<ComboBox fx:id="cbLedgerType" onAction="#loadSubledgers" prefHeight="30.0" prefWidth="246.0" promptText="Select Ledger">
					<VBox.margin>
						<Insets left="25.0" />
					</VBox.margin>
				</ComboBox>
				<ComboBox fx:id="cbSubledgerType" prefHeight="30.0" prefWidth="246.0" promptText="Select Subledger">
					<VBox.margin>
						<Insets left="25.0" />
					</VBox.margin>
				</ComboBox>
				<ComboBox fx:id="cbTransactionType" prefHeight="30.0"
					prefWidth="246.0" promptText="Select Transaction Type">
					<VBox.margin>
						<Insets left="25.0" />
					</VBox.margin>
				</ComboBox>
				<ComboBox fx:id="cbSubjectMatter" prefHeight="30.0"
					prefWidth="246.0" promptText="Select Subject/Umoor">
					<VBox.margin>
						<Insets left="25.0" />
					</VBox.margin>
				</ComboBox>
				<HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="255.0" spacing="15.0">
					<VBox.margin>
						<Insets left="25.0" right="25.0" />
					</VBox.margin>
					<children>
						<DatePicker fx:id="dateOfTransaction" editable="false" prefHeight="30.0" prefWidth="245.0" promptText="Date" />
					</children>
				</HBox>
				<TextField fx:id="amount" prefHeight="30.0" prefWidth="246.0" promptText="Amount">
					<VBox.margin>
						<Insets left="25.0" right="25.0" />
					</VBox.margin>
				</TextField>
				<TextArea fx:id="narration" prefHeight="60.0" prefWidth="246.0"
					promptText="Narration">
					<VBox.margin>
						<Insets left="25.0" right="25.0" />
					</VBox.margin>
				</TextArea>
				<HBox prefHeight="30.0" prefWidth="250.0" spacing="10.0">
					<children>
						<Button fx:id="reset" mnemonicParsing="false" onAction="#reset" prefHeight="30.0" prefWidth="75.0" style="-fx-background-color: white;" text="Reset">
							<effect>
								<DropShadow blurType="ONE_PASS_BOX" color="#1965d0" />
							</effect>
						</Button>
						<Button fx:id="saveTransaction" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#saveTransaction" prefHeight="30.0" prefWidth="75.0" styleClass="btnGreen" text="Save" textFill="WHITE">
							<font>
								<Font size="15.0" />
							</font>
							<effect>
								<DropShadow blurType="ONE_PASS_BOX" color="#6468b2" />
							</effect>
						</Button>
					</children>
					<opaqueInsets>
						<Insets />
					</opaqueInsets>
					<VBox.margin>
						<Insets left="110.0" />
					</VBox.margin>
				</HBox>
			</children>
			<padding>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
			</padding>
			<BorderPane.margin>
				<Insets />
			</BorderPane.margin>
		</VBox>
	</left>
	<center>
		<VBox alignment="TOP_RIGHT" prefHeight="571.0" prefWidth="692.0" BorderPane.alignment="CENTER">
			<children>
				<Button fx:id="deleteTransactions" mnemonicParsing="false" onAction="#deleteTransactions" prefHeight="30.0" prefWidth="75.0" style="-fx-background-color: white;" text="Delete">
					<effect>
						<DropShadow blurType="ONE_PASS_BOX" color="#1965d0" />
					</effect>
				</Button>
				<TableView fx:id="transactionTable" prefHeight="300.0" prefWidth="679.0" tableMenuButtonVisible="true">
					<columns>
						<TableColumn fx:id="colTransactionId" maxWidth="700.0"
							prefWidth="20.0" text="ID" />
						<TableColumn fx:id="colInitiator" maxWidth="4000.0"
							prefWidth="75.0" text="Initiator" />
						<TableColumn fx:id="colDepartment" maxWidth="4000.0"
							prefWidth="75.0" text="Department" />
						<TableColumn fx:id="colDateOfTransaction" maxWidth="4000.0"
							prefWidth="75.0" text="Date" />
						<TableColumn fx:id="colRecipient" maxWidth="4000.0"
							prefWidth="60.0" text="Recipient" />
						<TableColumn fx:id="colLedgerType" maxWidth="4000.0"
							prefWidth="60.0" text="Ledger" />
						<TableColumn fx:id="colSubledgerType" maxWidth="4000.0"
							prefWidth="60.0" text="Subledger" />
						<TableColumn fx:id="colTransactionType" maxWidth="6000.0"
							prefWidth="130.0" text="Subject" />
						<TableColumn fx:id="colSubjectMatter" maxWidth="6000.0"
							prefWidth="130.0" text="Subject/Umoor" />
						<TableColumn fx:id="colAmount" maxWidth="4000.0"
							prefWidth="75.0" text="Amount" />
						<TableColumn fx:id="colNarration" maxWidth="4000.0"
							prefWidth="75.0" text="Narration" />
					</columns>
					<VBox.margin>
						<Insets left="10.0" right="5.0" />
					</VBox.margin>
					<columnResizePolicy>
						<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
					</columnResizePolicy>
				</TableView>
			</children>
		</VBox>
	</center>
</BorderPane>
